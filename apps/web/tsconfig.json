{
  "extends": "@huynhsang-blog/typescript-config/nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    },
    "baseUrl": ".",
    "rootDir": "."
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "index.d.ts",
    "next-env.d.ts",
    "next.config.ts",
    "postcss.config.mjs",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    ".contentlayer/**",
    "contentlayer.config.ts",
    "src/components/docs/mdx.tsx",
    "src/lib/core/utils/blog.ts",
    "src/lib/core/utils/doc.ts"
  ]
}
